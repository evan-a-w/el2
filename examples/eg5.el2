extern print_string : &char -> unit = "fputs"
extern print_int : int -> unit = "print_int"

type string_struct := {
    string : &char;
    length : int
}

let print_string_struct(s) := {
    print_string(s.string);
    print_int(s.length)
}

let main() := {
        let s := #string_struct {
                string : "Hello, world!\n";
                length : 14
        };
        print_string_struct(s);
        0
  }
